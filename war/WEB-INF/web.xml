<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>NotesServlet</servlet-name>
		<servlet-class>org.gdg.ioext12.NotesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotesServlet</servlet-name>
		<url-pattern>/notes</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>NoteServlet</servlet-name>
		<servlet-class>org.gdg.ioext12.NoteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoteServlet</servlet-name>
		<url-pattern>/note/*</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>notes.html</welcome-file>
	</welcome-file-list>
</web-app>
